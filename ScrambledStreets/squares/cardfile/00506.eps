%%BoundingBox: 0 0 1125 1125

newpath
1 1  moveto
1 1124 lineto
1124 1124 lineto
1124 1 lineto
closepath
gsave
    1 setgray
    fill
grestore
stroke

gsave
    newpath
    1 0 0 setrgbcolor
    37.5 37.5 moveto
    37.5 1087 lineto
    1087 1087 lineto
    1087 37.5 lineto
    closepath
    stroke
grestore

gsave
    newpath
    1 1 0 setrgbcolor
    75 75 moveto
    75 1050 lineto
    1050 1050 lineto
    1050 75 lineto
    closepath
    stroke
grestore

/height 1050 def
/width height def
/third height 3 div def
/halfline 20 def
/xcontrolpoint 300 def
/ycontrolpoint 300 def
/lnw 4 def

/origintocenter height 2 div def

/orient {
    /n exch def
    origintocenter origintocenter translate
    n -90 mul rotate
    -1 origintocenter mul -1 origintocenter mul translate
} def


/horizflip {width 0 translate -1 1 scale} def


/black {0 setgray fill} def
/white {gsave 1 setgray fill grestore lnw setlinewidth stroke} def
/gray {gsave 0.65 setgray fill grestore lnw setlinewidth stroke} def

/colors {
    /param exch def
param 0 eq {black} if
    param 1 eq {gray} if
param 2 eq {white} if
%stroke and fill handled in color's code to account for display differences
%   this is compatible with an unusual crosshatch pattern done once
} def


37.5 37.5 translate

/smallcurve {
    /color exch def
    /orientation exch def
    gsave
        orientation orient
%%small curve to the left
        newpath
        third 0 moveto
        third halfline sub    0 lineto
        third halfline sub    ycontrolpoint halfline sub
        xcontrolpoint halfline sub    third halfline sub
        0    third halfline sub
        curveto
        0    third halfline add lineto
        xcontrolpoint halfline add   third halfline add
        third halfline add    ycontrolpoint halfline add
        third halfline add    0
        curveto
        closepath
        color colors
    grestore
} def
/type0 {smallcurve} def



/tallcurve {
    /color exch def
    /orientation exch def
    gsave
        orientation orient
        %tall curve to the left
        newpath
        third    0 moveto
        third halfline sub    0 lineto
        third halfline sub    ycontrolpoint 2 mul halfline sub
        xcontrolpoint halfline sub    height third sub halfline sub
        0    height third sub halfline sub
        curveto
        0    height third sub halfline add lineto
        xcontrolpoint halfline add    height third sub halfline add
        third halfline add    ycontrolpoint 2 mul halfline add
        third halfline add    0
        curveto
        closepath
        color colors
    grestore
} def
/type1 {tallcurve} def

/type7 {
    /color exch def
    /orientation exch def
    gsave
        orientation orient
        horizflip
        0 color tallcurve
    grestore
} def



/diag {
    /color exch def
    /orientation exch def
    gsave
        orientation orient
        %diagonal from position 1 (bottom, left half)
            % to position 5 (top, right half)
        newpath
        width third sub    height moveto
        width third sub halfline add    height lineto
        width third sub halfline add    height xcontrolpoint 0.9 mul sub
        third halfline add      xcontrolpoint 0.9 mul
        third halfline add      0
        curveto
        third halfline sub      0 lineto
        third halfline sub      xcontrolpoint 0.9 mul
        width third sub halfline sub    height xcontrolpoint 0.9 mul sub
        width third sub halfline sub    height
        curveto

        closepath
        color colors
    grestore
} def
/type3 {diag} def

/type6 {
    /color exch def
    /orientation exch def
    gsave
        orientation orient
        horizflip
        0 color diag
    grestore
} def



/semicirc {
    /color exch def
    /orientation exch def
    gsave
        orientation orient
        %curve between two bottom points
        newpath
        width third sub   0 moveto
        width third sub halfline add   0 lineto
        width third sub halfline add   xcontrolpoint 1.2 mul halfline add
        third halfline sub      xcontrolpoint 1.2 mul halfline add
        third halfline sub      0
        curveto
        third halfline add      0 lineto
        third halfline add      xcontrolpoint  1.2 mul halfline sub
        height third sub halfline sub      xcontrolpoint  1.2 mul halfline sub
        height third sub halfline sub   0
        curveto

        closepath
        color colors
    grestore
} def
/type5 {semicirc} def


/horizline {
    /color exch def
    /orientation exch def
    gsave
        orientation orient
        %low horizontal line
        newpath
        width    third halfline add moveto
        0    third halfline add lineto
        0    third halfline sub lineto
        width third halfline sub lineto
        closepath
        color colors
    grestore
} def


/vertline {
    /color exch def
    /orientation exch def
    gsave
        orientation orient
        %straight down the middle
        newpath
        third    height moveto
        third halfline add    height lineto
        third halfline add    0 lineto
        third halfline sub    0 lineto
        third halfline sub    height lineto
        closepath
        color colors
    grestore
} def
/type2 {vertline} def

/broadcurve {
    /color exch def
    /orientation exch def
    gsave
        orientation orient
        newpath
        third 0 moveto
        third halfline sub      0 lineto
        third halfline sub      height ycontrolpoint sub halfline add
        width xcontrolpoint sub halfline sub    height third sub halfline add
        width   height third sub halfline add
        curveto
        width   height third sub halfline sub lineto
        width xcontrolpoint sub halfline add    height third sub halfline sub
        third halfline add      height ycontrolpoint sub halfline sub
        third halfline add      0
        curveto
        closepath
        color colors
    grestore
} def
/type4 {broadcurve} def

%0 0 type1
%3 1 type2
%1 0 type3
%1 1 type4
%0 0 type5
%2 0 type6
%0 2 type7
%3 2 type8

gsave 2 1 type5 grestore 
gsave 1 2 type6 grestore 
gsave 3 0 type1 grestore 
